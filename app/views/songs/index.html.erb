<p id="notice"><%= notice %></p>

<h1>My Songs</h1>

<%= link_to new_song_path do %>
  <i class="fa fa-plus-square" aria-hidden="true"></i>></i> New Song
<% end %>




<div class="row">
    <% @songs.each do |song| %>
      <div class="col-md-6">
        <div class="well">
        <h2><%= link_to song.name, song %></h2>
        <h3><%= song.artist.name %></h3>
        <p>
          <% song.rating.to_i.times do %>
          <i class="fa fa-star-o yellow" aria-hidden="true"></i>
          <% end %>
        </p>

        <p>
          <%= link_to edit_song_path(song) do %>
          <i class="fa fa-pencil-square" aria-hidden="true"></i> Edit
          <% end %>
        
          <%= link_to song, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa fa-ban" aria-hidden="true"></i> Destroy  
          <% end %>
        </p>
      </div>
      </div>
    <% end %>
</div>


